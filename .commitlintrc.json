{
	"$schema": "https://json.schemastore.org/commitlintrc.json",
	"extends": [
		"@commitlint/config-angular"
	],
	"rules": {
		"type-enum": [
			2,
			"always",
			[
				"chore",
				"build",
				"ci",
				"docs",
				"feat",
				"fix",
				"perf",
				"refactor",
				"revert",
				"style",
				"test",
				"format",
				"wip",
				"workflow"
			]
		],
		"scope-case": [0, "always"]
	}
}